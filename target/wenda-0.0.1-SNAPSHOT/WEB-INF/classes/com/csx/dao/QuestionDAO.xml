<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.csx.dao.QuestionDAO">
    <sql id="table">question</sql>
    <sql id="selectFields">id, title, content,user_id,created_date,comment_count,topic_id,score
    </sql>
    <select id="selectQuestionsByScore" resultType="com.csx.model.Question">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>

        <if test="userId != 0">
            WHERE user_id = #{userId}
        </if>
        ORDER BY score DESC
        LIMIT #{offset},#{limit}
    </select>

    <select id="selectLatestQuestions" resultType="com.csx.model.Question">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>

        <if test="userId != 0">
            WHERE user_id = #{userId}
        </if>
        ORDER BY id DESC
        LIMIT #{offset},#{limit}
    </select>

    <select id="selectLatestQuestionsByTopicId" resultType="com.csx.model.Question">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>

        <if test="topicId != 0">
            WHERE topic_id = #{topicId}
        </if>
        ORDER BY id DESC
        LIMIT #{offset},#{limit}
    </select>
</mapper>
